# YEScale API Configuration
YESCALE_API_KEY=your_api_key_here
YESCALE_API_URL=https://yescale.one/v1/chat/completions
YESCALE_ALLOW_SELF_SIGNED=true

# GPT Model to use
GPT_MODEL=gpt-4o

# Google Sheets API URL (optional)
GOOGLE_SHEET_API_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Debug mode (set to true for verbose logging)
DEBUG=true

# Advanced API Settings (optional)
REQUEST_TIMEOUT_MS=120000
PING_TIMEOUT_MS=30000
# MAX_REQUEST_SIZE_CHARS=10000
# COMPRESS_PROMPT=true
# MAX_RETRIES=3
# FALLBACK_TO_REGULAR=true
